.flash-item
  - if flash
    = flash[:alert]
.sale-page
  = render partial: 'shared/sub_header'
  .main-sale
    .main-sale__input-form
      = form_for @product do |f|
        = render "devise/shared/error_messages", resource: @product
        .sale-image
          .sale-image__form
            .image-title
              %label.sale-info 出品画像
              %span.necessary 必須
            %p.max-uploads
              最大4枚までアップロードできます
            .post__drop__box__container
              .prev-content
                - @product.images.each do |image|
                  .preview-box
                    .upper-box
                      = image_tag image.src.url, width: "112", height: "112", alt: "preview"
                    .lower-box
                      .delete-box
                        .delete-btn
                          %span 削除
              .label-content
                = f.label :"images_attributes_#{@product.images.count}_src", class: "label-box", id: "label-box--#{@product.images.count}" do
                  %pre.label-box__text-visible クリックしてファイルをアップロード
              .hidden-content
                = f.fields_for :images do |i|
                  = i.file_field :src, class: "hidden-field"
                  = i.check_box:_destroy, class: "hidden-checkbox"
                - @product.images.length.upto(3) do |i|
                  %input{name: "product[images_attributes][#{i}][src]", id: "product_images_attributes_#{i}_src", class:"hidden-field", type:"file"}
                  %input{name: "product[images_attributes][#{i}][_destroy]", id: "product_images_attributes_#{i}__destroy", class:"hidden-checkbox", type:"checkbox", value:"#{i}"}
        %hr.underline
        .product-description
          .product-description__form
            .name-form
              .name
                %label.sale-info 商品名
                %span.necessary 必須
              .input-form
                = f.text_field :name, class: "sale-info", placeholder: "40文字まで", type: "text", maxlength: "40", required: ""
            .description-form
              .name
                %label.sale-info 商品の説明
                %span.necessary 必須
              = f.text_area :description, class: "sale-info", rows: "7", maxlength: "1000", required: "", placeholder: "商品の説明（必須 1,000文字以内）\n（色、素材、重さ、定価、注意点など）\n\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
              .counter 0/1000
        %hr.underline
        .product-detail
          .product-detail__form
            %p.title-name 商品の詳細
            .category-form
              .name
                %label.sale-info カテゴリー
                %span.necessary 必須
              .select-form
                .listing-product-detail__category
                  .listing-select-wrapper
                    .listing-select-wrapper__box
                    .select-area
                      = f.select :category, @category_parent_array, {selected:@product.category.parent.parent.name}, {class: 'sale-info', id: 'parent_category'}
                      %svg.arrow{width: "24", height: "24", fill: "#888888", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true"}
                        %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
                    .listing-select-wrapper__added#children_wrapper
                      = f.select :category, options_for_select(@category_children_array.map{|b| [b.name, b.id, {data:{category: b.id}}]}, {prompt: "指定なし", selected: @product.category.parent.id}),{}, {class: 'listing-select-wrapper__box--select', id: 'child_category'}
                      %svg.arrow{width: "24", height: "24", fill: "#888888", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true", class: "child-svg"}
                        %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
                    .listing-select-wrapper__added#grandchildren_wrapper
                      = f.select :category, options_for_select(@category_grandchildren_array.map{|b| [b.name, b.id, {data:{category: b.id}}]}, {prompt: "指定なし", selected: @product.category.id}),{}, {class: 'listing-select-wrapper__box--select', id: 'grandchild_category'}
                      %svg.arrow{width: "24", height: "24", fill: "#888888", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true", class: "grandchild-svg"}
                        %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
            .size-form
              .name
                %label.sale-info サイズ
                %span.necessary 必須
              .select-form
                .select-area
                  = f.collection_select :size_id, Size.all, :id, :name, {include_blank: "選択して下さい", selected: @product.size_id}, class: 'sale-info', required: ""
                  %svg.arrow{width: "24", height: "24", fill: "#888888", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true"}
                    %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
            .brand-form
              .name
                %label.sale-info ブランド
                %span.optional 任意
              .select-form
                .select-area
                  = f.collection_select :brand_id, Brand.all, :id, :name, {include_blank: "選択して下さい", selected: @product.brand_id}, class: 'sale-info'
                  %svg.arrow{width: "24", height: "24", fill: "#888888", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true"}
                    %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
            .status-form
              .name
                %label.sale-info 商品の状態
                %span.necessary 必須
              .select-form
                .select-area
                  = f.collection_select :status_id, Status.all, :id, :name, {include_blank: "選択して下さい", selected: @product.status_id}, class: 'sale-info', required: ""
                  %svg.arrow{width: "24", height: "24", fill: "#888888", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true"}
                    %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
        %hr.underline
        .about-delivery
          .about-delivery__form
            .title
              %p.title-name
                配送について
                = link_to "#" do
                  %svg.question{width: "24", height: "24", fill: "#222222", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true"}
                    %path{d: "M12,2A10,10,0,1,0,22,12,10,10,0,0,0,12,2Zm0,18.6A8.6,8.6,0,1,1,20.6,12,8.61,8.61,0,0,1,12,20.6Z"}
                    %path{d: "M14.18,7.52A2.72,2.72,0,0,0,13.25,7a3.16,3.16,0,0,0-1.17-.2A3.12,3.12,0,0,0,10,7.43,2.92,2.92,0,0,0,9,9.27c0,.12,0,.18.12.19l1.4.22c.09,0,.15,0,.17-.13a1.63,1.63,0,0,1,.44-.91A1.2,1.2,0,0,1,12,8.31a1.17,1.17,0,0,1,.88.33,1.15,1.15,0,0,1,.33.83,1.62,1.62,0,0,1-.12.61,3.46,3.46,0,0,1-.41.67l-1.23,1.67a2.53,2.53,0,0,0-.31.58,2.51,2.51,0,0,0-.09.75v.63a.14.14,0,0,0,.16.16h1.44a.14.14,0,0,0,.16-.16v-.45a1.7,1.7,0,0,1,.07-.56,1.31,1.31,0,0,1,.24-.42l1.22-1.67A2.93,2.93,0,0,0,15,9.46a2.62,2.62,0,0,0-.22-1.09A2.43,2.43,0,0,0,14.18,7.52Z"}
                    %circle{cx: "12", cy: "16.24", r: "1"}
            .cost-form
              .name
                %label.sale-info 配送料の負担
                %span.necessary 必須
              .select-form
                .select-area
                  = f.collection_select :shippingcost_id, Shippingcost.all, :id, :name, {include_blank: "選択して下さい", selected: @product.shippingcost_id}, class: 'sale-info', required: ""
                  %svg.arrow{width: "24", height: "24", fill: "#888888", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true"}
                    %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
            .method-form
              .name
                %label.sale-info 配送の方法
                %span.necessary 必須
              .select-form
                .select-area
                  = f.collection_select :shipping_id, Shipping.all, :id, :name, {include_blank: "選択して下さい", selected: @product.shipping_id}, class: 'sale-info', required: ""
                  %svg.arrow{width: "24", height: "24", fill: "#888888", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true"}
                    %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
            .area-form
              .name
                %label.sale-info 発送元の地域
                %span.necessary 必須
              .select-form
                .select-area
                  = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {include_blank: "選択して下さい", selected: @product.prefecture_id}, class: 'sale-info', required: ""
                  %svg.arrow{width: "24", height: "24", fill: "#888888", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true"}
                    %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
            .days-form
              .name
                %label.sale-info 発送までの日数
                %span.necessary 必須
              .select-form
                .select-area
                  = f.collection_select :shippingdays_id, Shippingdays.all, :id, :name, {include_blank: "選択して下さい", selected: @product.shippingdays_id}, class: 'sale-info', required: ""
                  %svg.arrow{width: "24", height: "24", fill: "#888888", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true"}
                    %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
        %hr.underline
        .price
          .price__form
            .title
              %p.title-name
                価格（¥300〜9,999,999）
                = link_to "#" do
                  %svg.question{width: "24", height: "24", fill: "#222222", rule: "evenodd", viewbox: "0 0 24 24", hidden: "true"}
                    %path{d: "M12,2A10,10,0,1,0,22,12,10,10,0,0,0,12,2Zm0,18.6A8.6,8.6,0,1,1,20.6,12,8.61,8.61,0,0,1,12,20.6Z"}
                    %path{d: "M14.18,7.52A2.72,2.72,0,0,0,13.25,7a3.16,3.16,0,0,0-1.17-.2A3.12,3.12,0,0,0,10,7.43,2.92,2.92,0,0,0,9,9.27c0,.12,0,.18.12.19l1.4.22c.09,0,.15,0,.17-.13a1.63,1.63,0,0,1,.44-.91A1.2,1.2,0,0,1,12,8.31a1.17,1.17,0,0,1,.88.33,1.15,1.15,0,0,1,.33.83,1.62,1.62,0,0,1-.12.61,3.46,3.46,0,0,1-.41.67l-1.23,1.67a2.53,2.53,0,0,0-.31.58,2.51,2.51,0,0,0-.09.75v.63a.14.14,0,0,0,.16.16h1.44a.14.14,0,0,0,.16-.16v-.45a1.7,1.7,0,0,1,.07-.56,1.31,1.31,0,0,1,.24-.42l1.22-1.67A2.93,2.93,0,0,0,15,9.46a2.62,2.62,0,0,0-.22-1.09A2.43,2.43,0,0,0,14.18,7.52Z"}
                    %circle{cx: "12", cy: "16.24", r: "1"}
            .price-form
              .price-name-box
                .price-name
                  %label.sale-info 販売価格
                  %span.necessary 必須
                %span.yen
                  %i.fas.fa-yen-sign
                .yen-form
                  .yen-form__box
                    = f.number_field :price, class:"yen", placeholder: "0", type: "number", autocomplete: "off", min: "500", max: "9999999", required: ""
              .fee-form
                .name 販売手数料(10%)
                %span.value ー
              %hr.underline
              .return-form
                .name 販売利益
                %span.value ー
        .btn-form
          = f.submit "出品する", class:"sale-btn"
          %button.save-btn{type: "button"} 下書きに保存

  = render partial: 'shared/sub_footer'
